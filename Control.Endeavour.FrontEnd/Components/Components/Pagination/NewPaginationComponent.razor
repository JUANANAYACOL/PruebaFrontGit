@typeparam T
@typeparam M

<!-- Parte 4: Botones en la izquierda, centro y derecha -->
<div class="row mt-4">
    <div class="col-lg-2">
        <TelerikDropDownList Data="@dropdownOptions"
                             ValueField="PageNumber"
                             TextField="PageName"
                             Value="@selectedPage"
                             ValueChanged="@( (int newValue) => OnPageSelectedAsync(newValue) )">
        </TelerikDropDownList>
    </div>
    <div class="col-lg-8 text-lg-end text-center text-page">

        <!-- Botón izquierdo -->
        <img src="@GetLeftButtonImage()" @onclick="GoToPreviousPage" class="cursor-pointer-class img-fluid" title="Anterior"/>
        @selectedPage / @totalPages
        <!-- Botón derecho -->
        <img src="@GetRightButtonImage()" @onclick="GoToNextPage" class="cursor-pointer-class img-fluid" title="Siguiente" />
    </div>
    <div class="col-lg-4 text-lg-end text-center d-none">
        <a href="tu_url">
            <img src="../img/botonExcel.svg" alt="Texto Alternativo">
        </a>
    </div>
</div>
<NotificationsComponentModal @ref="notificationModal"></NotificationsComponentModal>

