<NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>
<div id="dropdown2">
    <TelerikDropDownList Data="@culturesTranslated"
                         Value="@currentCulture"
                         Id=""
                         DefaultText=@Translation["Languages"]
                         TextField="Value"
                         ValueField="Key"
                         Filterable="true"
                         ValueChanged="@((string Value) => ChangeLanguage(Value ))"
                         FilterOperator="StringFilterOperator.Contains">
    </TelerikDropDownList>
    
</div>

<style>
    #dropdown2 .k-picker-solid {
        background-color: transparent !important;
    }

    #dropdown2 .k-input, #dropdown2 .k-picker {
        border-style: none !important;
    }
</style>