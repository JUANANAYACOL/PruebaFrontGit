<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title=@(Translation["Files"] + " - " + Translation["ReopenRecord"]) IsVisible="@ModalStatus" OnModalClosed="HandleModalClosedAsync" Width="60%">
            <ChildContent>
                <div class="row p-3 mb-2">
                    <div class="col-lg-4 mt-2">
                        <InputModalComponent @bind-InputValue="@IdExpediente" IsDisabled="true" LabelText="Id expediente:" IsVisible="true" Placeholder="" InputType="number" />
                        <InputModalComponent @bind-InputValue="@RecordNumber" IsDisabled="true" LabelText="@Translation["RecordNumber"]" IsVisible="false" Placeholder="" InputType="number" />
                    </div>
                    <div class="col-lg-12 mt-2">
                        <label class="mb-2">@Translation["Justification"]: <span style="color:gray">@string.Format(Translation["CharactersOutOf"], contadorcarac, "500")</span> <span class="red">*</span></label>
                        <textarea @bind="Justification" class="w-100 custom-textarea" id="RC_Justificacion" placeholder="" required maxlength="500" @oninput="ContarCaracteres"></textarea>
                    </div>
                    <div class="col-lg-12 mt-3 d-flex justify-content-center">
                        <ButtonComponent BtnClassColor="btnStyle--primary" BtnType="button" BtnText="Reabrir el expediente" BtnIcon="fa-regular fa-square-check" BtnOnClick="HandleGenerateClosure"></ButtonComponent>
                    </div>
                </div>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>
<NotificationsComponentModal @ref="NotificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>