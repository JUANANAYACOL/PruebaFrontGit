<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title=@(Translation["Administration"] + " - " + Translation["ManagementActions"]) IsVisible="modalStatus" OnModalClosed="HandleModalClosed" Width="70%">
            <ChildContent>
                <EditForm Model="@actionsDtoResponse" OnValidSubmit="HandleValidSubmit">

                    <div class="row p-2">
                        <div class="col-md-6 mb-2">
                            <InputModalComponent MethodValueChanged="ValidateEnableButton" InputMaxLength="100" LabelText=@(Translation["Name"]+":") Placeholder=@Translation["ActionName"] IsRequired="true" @bind-InputValue="actionsDtoResponse.Name"></InputModalComponent>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="row">

                                <div class="col-md-6">
                                    <label class="mb-2">@Translation["Class"]:<span class="red">*</span></label>
                                    <TelerikDropDownList Data="@classCodeList"
                                                         @bind-Value="actionsDtoResponse.ClassCode"
                                                         Id="GR_TipoDoc"
                                                         DefaultText=@Translation["SelectAnOption"]
                                                         TextField="Value"
                                                         ValueField="Code"
                                                         Filterable="true"
                                                         OnChange="ValidateEnableButton">
                                    </TelerikDropDownList>
                                </div>
                                <div class="col-md-6 d-flex align-items-end justify-content-end">
                                    <div class="px-2">
                                        <TelerikSwitch @bind-Value="@actionsDtoResponse.ActiveState" />
                                    </div>
                                    <div class="px-2">
                                        @(actionsDtoResponse.ActiveState ? Translation["Enabled"] : Translation["Disabled"])
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row p-2">
                        <div class="col-md-6 mb-2">
                            <label class="mb-2">@Translation["FlowState"]:<span class="red">*</span></label>
                            <TelerikDropDownList Data="@flowStateList"
                                                 @bind-Value="actionsDtoResponse.FlowStateCode"
                                                 Id="GR_TipoDoc"
                                                 DefaultText=@Translation["SelectAnOption"]
                                                 TextField="Value"
                                                 ValueField="Code"
                                                 Filterable="true"
                                                 OnChange="ValidateEnableButton">
                            </TelerikDropDownList>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="mb-2">@Translation["Origin"]:<span class="red">*</span></label>
                            <TelerikDropDownList Data="@originList"
                                                 @bind-Value="actionsDtoResponse.Origin"
                                                 Id="GR_TipoDoc"
                                                 DefaultText=@Translation["SelectAnOption"]
                                                 TextField="Value"
                                                 ValueField="Code"
                                                 Filterable="true"
                                                 OnChange="ValidateEnableButton">
                            </TelerikDropDownList>
                        </div>
                    </div>
                    <div class="row">
                        <div class="from-group from-group--margin-top justify-content-center">
                            <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnType="button" BtnText=@Translation["Clear"] BtnIcon="fa-solid fa-eraser" BtnOnClick="ResetFormAsync"></ButtonComponent>
                            <ButtonComponent BtnClassColor="btnStyle--primary" BtnClassModifiers="ml-10" BtnType="submit"   BtnDisabled="@enableButton" BtnIcon="fa-solid fa-floppy-disk"></ButtonComponent>
                        </div>
                    </div>
                </EditForm>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>

<NotificationsComponentModal @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></NotificationsComponentModal>