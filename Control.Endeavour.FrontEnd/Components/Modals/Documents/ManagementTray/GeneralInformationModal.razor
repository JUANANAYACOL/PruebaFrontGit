                <div class="col-sm-auto ">
                    <div class="dropdown">

                        <ButtonComponent BtnClassColor="btnStyle--primaryInLine" BtnClassModifiers="mt-2 btn-absolute" BtnVisible="docTask" BtnType="button" BtnText=@Translation["Documents"] BtnIcon="fa-solid fa-folder-open" BtnOnClick="() => ToggleDropdown(ref isDropdownMenuDocuments, ref DropdownMenuDocuments)"></ButtonComponent>
