                            <i class=""></i>
                            <li class="pt-1 pb-1">
                                <a class="dropdown-item cursor-pointer-class" @onclick="ShowModalUpdateTypology"> <i class="fa-solid fa-pen-to-square me-2 ml-10"></i>@Translation["UpdateTyplogy"] </a>
                            </li>
                            <li class="pt-1 pb-1">
                                <a class="dropdown-item cursor-pointer-class" @onclick="ShowModalDocumentRelated"> <i class="fa-solid fa-folder-tree me-2 ml-10"></i>@Translation["DocumentRelated"] </a>
                            </li>
                            <li class="pt-1 pb-1 ">
                                <a class="dropdown-item cursor-pointer-class" @onclick="ShowModalDocumentCopies"><i class="fa-solid fa-copy me-2 ml-10"></i>@Translation["Copies"]</a>
                            </li>

                            <li class="pt-1 pb-1 ">
                                <a class="dropdown-item cursor-pointer-class" @onclick="ShowModalMetaDataDocument"> <i class="fa-solid fa-file-lines me-2 ml-10"></i>@Translation["Metadatas"]</a>
