 @inherits LayoutComponentBase

<TelerikRootComponent>

    <SpinnerLoaderComponent></SpinnerLoaderComponent>

    <div class="page-wrapper">
        <div class="responsive-background"></div>
        @* <img src="@(!string.IsNullOrEmpty(bannerSrc)?bannerSrc:"../img/rascacielosAnguloVista1.jpeg")" alt="Banner" class="responsive-background" /> *@
        <img src="@(!string.IsNullOrEmpty(bannerSrc)?bannerSrc:"../img/rascacielosAnguloVista1.jpeg")" alt="Banner" class="responsive-background banner-pc">
        <img src="@(!string.IsNullOrEmpty(mobileBannerSrc)?mobileBannerSrc:"../img/rascacielosAnguloVista1.jpeg")" alt="Banner" class="responsive-background banner-mobile">
        <header class="flex-shrink-0">
            <nav class="navbar navbar-expand-lg navbar-light navbar--background">
                <div class="container-fluid d-flex justify-content-between">

                    <!-- Logo Navbar -->
                    <a class="navbar-brand ms-3" href="../" title=@Translation["Home"]>
                        <img src="../img/logocontrol.svg" alt="Logo-ControlDoc" class="img-fluid" />
                    </a>

                    <!-- Botón de hamburguesa para pantallas pequeñas -->
                    <button class="navbar-toggler" @onclick="ToggleNavbar" title=@Translation["MoreOptions"]>
                        <i class="fas fa-solid fa-bars navbar-toggler__menuIcon"></i>
                    </button>

                    <!-- Menú colapsable -->
                    <div class="@navbarCollapseCss justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item" id="opciones">
                                <div class="dropdown">
                                    <button class="btnStyle btnStyle--transparent" type="button" @onclick="ToggleDropdownAsync" title=@Translation["MoreOptions"]>
                                        <img class="ms-1 me-1" src="../img/iconotrespuntos.svg" alt="Más opciones" />
                                    </button>
                                    <ul class="@DropdownMenuCss">
                                        <li>
                                            <div class="row modo-dark">
                                                <div class="col-md-7 d-flex align-items-center">
                                                    <label class="mb-0">@Translation["LightDarkMode"]</label>
                                                </div>
                                                <div class="col-md-5 d-flex justify-content-end">
                                                    <button class="switch-darkmode" id="switch" @onclick="ToggleTheme">
                                                        <span><i class="fas fa-sun"></i></span>
                                                        <span><i class="fas fa-moon"></i></span>
                                                    </button>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                             <li class="nav-item">
                                @* <DropDownListLanguageComponent /> *@
                                <DDLLangComponent/>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main class="container-fluid p-0 main-content d-flex flex-column" @onclick="() => ClosedDropdown()">
            <div class="row flex-grow-1 g-0">
                <div class="col-7 d-flex flex-column logo-target">
                    <div class="p-4 pb-0 text-center logo-container show-on-small">
                        <div class="mb-4">
                            <img src="@(!string.IsNullOrEmpty(logoSrc)?logoSrc:"../img/logocontrolonlineinternationalblanco.png")" alt="Logo" class="logo_1 img-fluid" />
                        </div>
                       @* <div class="mb-4">
                            <DropDownListLanguageComponent />
                        </div>*@
                        <div>

                           @*  <LabelComponent KeyName="<p> @Translation["BienvenidosLabel")" For="name-field" FontSize="24px" IsBold="true" IsCentered="true" /> *@
                            <LabelComponent KeyName="@Translation["Welcome"]" For="name-field" FontSize="24px" IsBold="true" IsCentered="true" />
                        </div>
                    </div>
                    <div class="flex-grow-1">
                    </div>
                </div>
                <div class="col-5 bg-custom d-flex flex-column">
                    <div class="p-4 pb-0 text-center logo-container hide-on-small">
                        <img src="@(!string.IsNullOrEmpty(logoSrc)?logoSrc:"../img/logocontrolonlineinternationalblanco.png")" alt="Logo" class="logo_1 img-fluid" />
                    </div>
                    <div class="flex-grow-1 position-relative">
                        <div class="d-flex justify-content-center align-items-center mt-3 mr-3 mx-auto" style="max-width: 70%;">
                            @Body
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 end-0 logo-wrapper z-n1">
                    </div>

                </div>
            </div>
        </main>
        <footer id="footer-login" class="footer-wrapper" @onclick="() => ClosedDropdown()">
            <div class="container">
                <p class="footer-text m-0">
                    <strong>V-@version</strong>
                    <a @onclick="@((args)=> OpenPdfTermsCondition("Terms&Conditions"))">

                        | <u> <span class="cursor-pointer-class">@Translation["Terms&Conditions"]</span> </u>
                    </a>

                    <a @onclick="@((args)=> OpenPdfTermsCondition("PrivacyPolicy"))">
                        | <u>  <span class="cursor-pointer-class">@Translation["PrivacyPolicy"]</span> </u>
                    </a>

                    <span>@Translation["Copyright"]</span>
                </p>
            </div>
        </footer>
    </div>
</TelerikRootComponent>
